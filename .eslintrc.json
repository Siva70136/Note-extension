{
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "webextensions": true,
      "worker": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly",
      "webextensions": true,
      "module": "readonly",
      "__dirname": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "no-undef":"off"
    }
  }
  